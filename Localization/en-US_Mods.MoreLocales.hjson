	}

	ClientSideConfig: {
		DisplayName: Client Side Config

		ForcedFont: {
			Label: Force Localized Font Type
			Tooltip:
				'''
				Forces the game to use this type of localized font, disregarding the current language settings.
				This is {$Configs.LocalizedFont.None.Label} by default, which means the font will dynamically change with the chosen language.
				'''
		}

		LocalizedPrefixPlacement: {
			Label: Smart Prefix Position
			Tooltip: Changes the position of an item's prefix in certain languages
		}

		LocalizedPrefixGenderPluralization: {
			Label: Smart Prefix Inflection
			Tooltip: Changes the inflection of an item's prefix depending on the item in certain languages
		}
	}

	LocalizedFont: {
		Tooltip: The type of font the game uses. Small changes to the font for different languages are necessary due to Unicode restrictions
		None.Label: None
		Default.Label: Default
		Japanese.Label: Japanese
		Korean.Label: Korean
	}
}

